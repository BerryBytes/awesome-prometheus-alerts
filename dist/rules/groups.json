{
	"mysql": {
		"groups": [
			"MysqldExporter"
		],
		"script": "helm install mysql-exporter prometheus-community/prometheus-mysql-exporter -n $NAMESPACE --version 2.0.0 --set mysql.host=$HOST,mysql.user=$USER,mysql.pass=$PASS,mysql.db=$DB,mysql.port=$PORT",
		"uninstall_script": "helm uninstall mysql-exporter  -n $NAMESPACE",
		"values": [
			"NAMESPACE",
			"USER",
			"PASS",
			"HOST",
			"DB",
			"PORT"
		]
	},
    "general": {
		"groups": [
			"GeneralRules"
		],
		"script": "",
		"uninstall_script":"",
		"values": [

		]
	},


	"mongodb": {
		"groups": [
			"StefanprodanMgobExporter",
			"DcuMongodbExporter",
			"PerconaMongodbExporter"
		],
		"script": "helm install mongodb-exporter prometheus-community/prometheus-mongodb-exporter --version 3.4.0 -n $NAMESPACE --set-string mongodb.uri=mongodb://$USER:$PASS@$HOST:27017 --set serviceMonitor.enabled=true --set serviceMonitor.additionalLabels.release=prometheus --set-string service.annotations.\"prometheus\\.io/scrape\"=true --set-string service.annotations.\"prometheus\\.io/port\"=\"metrics\"",
		"uninstall_script": "helm uninstall mysql-exporter  -n $NAMESPACE",
		"values": [
			"NAMESPACE",
			"USER",
			"PASS",
			"HOST"
		]
	},
	"postgresql": {
		"groups": [
			"PostgresExporter"
		],
		"script": "helm install postgres-exporter --set-string service.annotations.\"prometheus.io/scrape\"=true --set-string service.annotations.\"prometheus.io/port\"=9187 --set config.datasource.host=$HOST --set config.datasource.password=$PASS --set config.datasource.user=$USER --devel prometheus-community/prometheus-postgres-exporter -n $NAMESPACE",
		"uninstall_script": "helm uninstall postgres-exporter  -n $NAMESPACE",
		"values": [
			"NAMESPACE",
			"USER",
			"PASS",
			"HOST"
		]
	}



}